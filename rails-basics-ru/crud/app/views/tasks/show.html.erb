<h1><%= @task.name %></h1>
<p><%= @task.description %></p>
<p><i><%= @task.status %> by</i> <%= @task.creator %> at  <%= @task.created_at.strftime('%d.%m.%Y %H:%M') %></p>
<p><%= 'completed' if @task.completed %></p>
<%= link_to 'Edit', edit_task_path %>
<%= link_to 'Delete', task_path, method: 'delete' %>